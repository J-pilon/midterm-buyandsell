<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/artists.css" type="text/css" />

  <!-- carousel css -->
  <!-- <link rel="stylesheet" href="/styles/carousel.css" /> -->
  <!-- carousel script -->
  <script src="/scripts/carousel.js"></script>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@200;300&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/03a60bf669.js" crossorigin="anonymous"></script>

  <title>Artists Page</title>
</head>

<body>
  <%-include('./partials/_headers') %>
  <div id="upload_song">
    <p>
      Post Your Track Here
    </p>
    <form method="POST" action="/artists">
      <div id="post_music">
        <input type="text" name="song_name" placeholder="Name Your Track">
        <input type="text" name="genre" placeholder="Genre">
        <input type="submit">
      </div>
    </form>
  </div>
    <div id="artist_songs">
      <div>Example Artist</div>
      <% for(let song of songs) { %>
      <p class="song_part"><%= song.song_name %></p>
      <p class="song_part"><%= song.genre %></p>
      <p class="song_part"><%= `${song.downloaded} downloads` %></p>
      <% } %>
    </div>
</body>
</html>
